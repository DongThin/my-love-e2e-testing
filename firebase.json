{
  "hosting": {
    "public": "src",
    "site": "thin-pham",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "doc/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": false
    },
    "singleProjectMode": true
  }
}
